<h2>Edit the Movie {{title}}</h2>
<form action="/movies/{{_id}}/edit" method="post">
   <label>
      Title
      <input type="text" name="title" value="{{title}}"/>
   </label>
   <label>
      genre
      <input type="text" name="genre"value="{{genre}}" />
   </label>
   <label>
      Plot
      <textarea name="plot" cols="30" rows="4"></textarea>
   </label>
   <button type="submit">Edit</button>
</form>